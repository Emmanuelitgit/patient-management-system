<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="patient_management_system.dao.PrescriptionChargeMapper">

    <resultMap id="PrescriptionChargeResultMap" type="patient_management_system.models.PrescriptionCharge">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="enabled" property="enabled"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="created_at" property="createdAt"/>
        <result column="created_by" property="createdBy"/>
    </resultMap>

    <select id="findAll" resultMap="PrescriptionChargeResultMap">
        SELECT * FROM prescription_charges_tbl;
    </select>

    <select id="findById" resultMap="PrescriptionChargeResultMap" parameterType="string">
        SELECT * FROM prescription_charges_tbl WHERE id = #{id}
    </select>

    <select id="findByName" resultMap="PrescriptionChargeResultMap" parameterType="string">
        SELECT * FROM prescription_charges_tbl WHERE name = #{name}
    </select>

    <insert id="addPrescriptionCharge">
        INSERT INTO prescription_charges_tbl(id,name,price,enabled,created_at,created_by)
        VALUES(#{id},#{name},#{price},#{enabled},#{createdAt},#{createdBy})
    </insert>

    <update id="updateById">
        UPDATE prescription_charges_tbl
        SET enabled=#{enabled}, name=#{name},price=#{price},updated_at=#{updatedAt},
        updated_by=#{updatedBy}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="string">
        DELETE FROM prescription_charges_tbl WHERE id = #{id}
    </delete>

</mapper>