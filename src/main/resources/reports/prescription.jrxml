<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="prescription_report"
              pageWidth="595"
              pageHeight="842"
              columnWidth="515"
              leftMargin="40"
              rightMargin="40"
              topMargin="50"
              bottomMargin="50"
              uuid="5a5f81e0-4f5a-4e27-9ac9-d4560d9a1b9f">

    <!-- ==================== PARAMETERS ==================== -->
    <parameter name="clinicName" class="java.lang.String"/>
    <parameter name="clinicLogo" class="java.io.InputStream"/>

    <!-- ==================== FIELDS ==================== -->
    <field name="patientName" class="java.lang.String"/>
    <field name="doctorName" class="java.lang.String"/>
    <field name="date" class="java.lang.String"/>
    <field name="medication" class="java.lang.String"/>
    <field name="dosage" class="java.lang.String"/>
    <field name="instructions" class="java.lang.String"/>

    <!-- ==================== TITLE ==================== -->
    <title>
        <band height="110">
            <!-- Logo -->
            <image>
                <reportElement x="0" y="0" width="70" height="70"/>
                <imageExpression><![CDATA[$P{clinicLogo}]]></imageExpression>
            </image>

            <!-- Clinic Name -->
            <textField>
                <reportElement x="90" y="10" width="400" height="25"/>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="18" isBold="true" />
                </textElement>
                <textFieldExpression><![CDATA[$P{clinicName}]]></textFieldExpression>
            </textField>

            <!-- Report Title -->
            <staticText>
                <reportElement x="0" y="80" width="515" height="25"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[PRESCRIPTION REPORT]]></text>
            </staticText>
        </band>
    </title>

    <!-- ==================== COLUMN HEADER ==================== -->
    <columnHeader>
        <band height="20">
            <line>
                <reportElement x="0" y="19" width="515" height="1" forecolor="#999999"/>
            </line>
        </band>
    </columnHeader>

    <!-- ==================== DETAIL ==================== -->
    <detail>
        <band height="190">
            <!-- Patient Info Box -->
            <rectangle>
                <reportElement x="0" y="0" width="515" height="70" backcolor="#F5F5F5" mode="Opaque"/>
            </rectangle>

            <staticText>
                <reportElement x="10" y="10" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Patient Name:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="10" width="200" height="15"/>
                <textFieldExpression><![CDATA[$F{patientName}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="10" y="30" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Doctor Name:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="30" width="200" height="15"/>
                <textFieldExpression><![CDATA[$F{doctorName}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="10" width="50" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Date:]]></text>
            </staticText>
            <textField>
                <reportElement x="410" y="10" width="100" height="15"/>
                <textFieldExpression><![CDATA[$F{date}]]></textFieldExpression>
            </textField>

            <!-- Prescription Details -->
            <staticText>
                <reportElement x="0" y="85" width="515" height="20"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="14" isBold="true" />
                </textElement>
                <text><![CDATA[PRESCRIBED MEDICATION]]></text>
            </staticText>

            <!-- Medication -->
            <staticText>
                <reportElement x="10" y="110" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Medication:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="110" width="350" height="15"/>
                <textFieldExpression><![CDATA[$F{medication}]]></textFieldExpression>
            </textField>

            <!-- Dosage -->
            <staticText>
                <reportElement x="10" y="130" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Dosage:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="130" width="350" height="15"/>
                <textFieldExpression><![CDATA[$F{dosage}]]></textFieldExpression>
            </textField>

            <!-- Instructions -->
            <staticText>
                <reportElement x="10" y="150" width="100" height="15"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Instructions:]]></text>
            </staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="120" y="150" width="350" height="40"/>
                <textFieldExpression><![CDATA[$F{instructions}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- ==================== PAGE FOOTER ==================== -->
    <pageFooter>
        <band height="60">
            <line>
                <reportElement x="0" y="0" width="515" height="1" forecolor="#999999"/>
            </line>
            <staticText>
                <reportElement x="0" y="10" width="250" height="15"/>
                <text><![CDATA[Doctor's Signature: ______________________]]></text>
            </staticText>
            <textField>
                <reportElement x="300" y="10" width="200" height="15"/>
                <textFieldExpression><![CDATA["Generated on: " + new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>